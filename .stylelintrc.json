{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier", "stylelint-config-idiomatic-order"],

  "plugins": ["stylelint-order", "stylelint-scss"],

  "rules": {
    "linebreaks": "unix",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "use",
          "forward",
          "import",
          "mixin",
          "include",
          "function",
          "extend",
          "error",
          "warn",
          "debug",
          "at-root",
          "if",
          "else",
          "each",
          "for",
          "while",
          "return"
        ]
      }
    ],
    "no-descending-specificity": null
  }
}
