<div class="user-settings-avatar">
  <div class="user-settings-avatar__preview">
    {{#if avatar}} 
        <img src="https://ya-praktikum.tech/api/v2/resources/{{avatar}}" class="user-settings-avatar__img" alt="Аватар">
    {{ else }}
      <img src="{{icon}}" class="user-settings-avatar__img" alt="Аватар">
    {{/if}}
  </div>
  <span class="user-settings-avatar__name">{{name}}</span>
</div>
