    "@types/mocha": "^8.2.2",
    "@types/pug": "^2.0.4",
    "@types/sinon": "^17.0.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
