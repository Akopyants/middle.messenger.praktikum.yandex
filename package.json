    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "jsdom": "^17.0.0",
    "mini-css-extract-plugin": "^2.2.0",
    "mocha": "^8.3.2",
    "parcel": "^2.0.0-rc.0",
    "prettier": "2.2.1",
